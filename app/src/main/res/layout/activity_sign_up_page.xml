<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD2EF"
    tools:context=".SignUpPageActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:id="@+id/edit_user_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ism:"
            android:textColor="@color/black"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:textColorHint="#959393"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/user_second_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="23dp"
        android:layout_below="@id/user_name"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:id="@+id/edit_user_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Familiya:"
            android:textColor="@color/black"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:textColorHint="#959393"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/user_second_name"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:id="@+id/edit_user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yosh:"
            android:textColor="@color/black"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:textColorHint="#959393"/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cornerRadius="40dp"
        android:layout_marginHorizontal="16dp"
        android:text="Next"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#0B2CD5"/>

</RelativeLayout>